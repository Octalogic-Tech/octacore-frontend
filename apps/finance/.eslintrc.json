{
  "extends": [
    "../../.eslintrc.json",
    "plugin:vue/vue3-essential",
    "@vue/typescript/recommended",
    "prettier"
  ],
  "rules": {
    "vue/no-deprecated-slot-attribute": "off"
  },
  "ignorePatterns": ["!**/*"],
  "env": {
    "node": true
  },
  "overrides": [
    {
      "files": ["**/*.spec.{j,t}s?(x)"],
      "env": {
        "jest": true
      }
    }
  ]
}
